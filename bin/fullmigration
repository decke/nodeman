#!/bin/sh

# change working directory
cd ..
rm -f share/nodeman.db

# create new database and import initial schema
sqlite3 share/nodeman.db < share/schema.sql

if [ -f share/overlay.sql ]; then
  sqlite3 share/nodeman.db < share/overlay.sql
fi

# fix owner/group
chown www:www share/nodeman.db

# call our migration script
bin/migratedb

