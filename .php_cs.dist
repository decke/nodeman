<?php

$finder = PhpCsFixer\Finder::create()
    ->in(__DIR__)
    ->name('*')
;

return PhpCsFixer\Config::create()
    ->setFinder($finder)
    ->setRules([
        'no_unused_imports' => true,
        'no_whitespace_in_blank_line' => true,
        'single_quote' => true
    ])
    ->setIndent("    ")
    ->setLineEnding("\n")
    ->setUsingCache(false)
;
